/**index.wxss**/
/* 头部 */
.nav {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background: #fff;
}
 
.title_text {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-size: 34rpx;
}
 
.title_icon {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  border-radius: 70rpx;
  box-sizing: border-box;
  border: 0.5px solid #eaeaea;
  display: flex;
  z-index: 20;
}
 
.title_icon image {
  display: inline-block;
  overflow: hidden;
  width: 32rpx;
  height: 36rpx;
  padding: 16rpx 32rpx;
  text-align: center;
}
 
.title_icon view {
  height: 18px;
  border-left: 1px solid #eaeaea;
  margin-top: 6px;
}
.title_icon_btn{
  border:0;
  background:transparent;
  height: 62rpx;
  width:auto;
  padding:0;
}
.title_icon_btn::after {
  border:0;
  height:0;
  width:auto;
  padding:0;
}
/* 内容 */
page{
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}
.page-section-spacing{
  box-sizing: border-box;
  /* padding: 0 80rpx; */
}
.swiper-item{
  height:100%
}
.swiper-item .home-image{
  height:100%;
  width:100%
}
.home-list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.home-list .card-box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height:200rpx;
    border-top:1rpx solid #ccc;
    border-bottom:1rpx solid #ccc
}
.home-list .card-box .left{
  height:180rpx;
  width:180rpx;
  padding:10rpx;
}
.home-list .card-box image{
  height:100%;
  width:100%;
}
.home-list .card-box .right{
  width:calc( 100% - 220rpx ); 
  /* float: right; */
  display: flex;
  flex-direction:column;
  justify-content:space-around;
}
.home-list .card-box .right-one{
  font-size: 50rpx;
  font-weight:600
}
.home-list .card-box .right-two{
  font-size: 30rpx;
}